#!/usr/bin/env ruby

require 'ii'
require 'logger'
require 'fileutils'


#创建一个logger输出警告和错误信息
logger = Logger.new(STDERR)
logger.level = Logger::WARN

# change to current directory
Dir.chdir(Dir.pwd)

# 定义一些目录
current_dir = Dir.pwd
source_dir = '_source'
dest_ios_dir = 'ios'
dest_android_dir = 'android'
dest_android_xhdpi_dir = 'android/drawable-xhdpi'
dest_android_hdpi_dir = 'android/drawable-hdpi'
dest_android_mdpi_dir = 'android/drawable-mdpi'

# 开始流程

# 是否有_source文件夹
if File.directory? source_dir

  # 创建各种输出文件夹
  [dest_ios_dir,
  dest_android_dir,
  dest_android_xhdpi_dir,
  dest_android_hdpi_dir,
  dest_android_mdpi_dir].each do |path|
    Dir.mkdir path
  end

  # 得到文件和文件夹的列表
  files = []
  Find.find(source_dir) do |path|
    if path.size > source_dir.size # not root
      files << path
    end
  end

  puts files

  # 全部拷贝到iOS目标路径
  FileUtils.cp_r source_dir + '/.', dest_ios_dir

  # 全部处理后放到Android目标路径
  files.each do |filename|
    # 如果是文件夹，就复制一份
    if File.directory? filename
      FileUtils.mkdir_p dest_android_xhdpi_dir + filename.slice(/\/.*/)
    ## 如果是文件，就改名并拷贝文件
    else
      new_filename = filename.slice(/\/.*/).sub('@2x','')
      FileUtils.cp filename,dest_android_xhdpi_dir + new_filename
    end

  end

else
  logger.warn 'Please put all files to _source directory.'
end

